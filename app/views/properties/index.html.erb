<div class="container-h1 mt-3">
  <h1>Mis propiedades</h1>
</div>
<hr>

<%# <h4><%= link_to "Agregar Propiedad", new_property_path, class: "btn btn-primary" %></h4>
<h4><%= button_to "Agregar Propiedad", new_property_path, class: "button-81 ml-1", method: :get %></h4>
<br>

<div class="container">
  <!-- Aqui comienzan las card de restauarnts-->
  <div class="row mt-5 mb-5">
    <% @properties.each do |property| %>
      <div class="col-4">
        <section class="articles">
          <article>
            <div class="article-wrapper">
              <figure>
                <%# <img src="https://picsum.photos/id/1011/800/450" alt="" /> %>
                <%= image_tag property.photos.first %>
              </figure>
              <div class="article-body">
                <h2><%= property.title.truncate(15) %></h2>
                <p>
                  <%= property.description.truncate(20) %>
                </p>
                <a href="/properties/<%=property.id%>" class="read-more">
                  Read more <span class="sr-only">about this is some title</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </section>
      </div>
    <% end %>
  </div>
  <!-- Aqui terminan las card de restauarnts-->
</div>



<ul>
  <% @properties.each do |property| %>
    <li><%= property.title %></li>
  <% end %>
</ul>
