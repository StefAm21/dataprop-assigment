<h1>DETAILS</h1>

<h2><%= @property.title %></h2>
<p><%= @property.description %></p>
<p><%= @property.property_type %></p>
<p><%= @property.price %></p>
<p><%= @property.comuna %></p>
<p><%= @property.area %></p>
<p><%= @property.rooms %></p>
<p><%= @property.bathrooms %></p>

<%# Falta agregar la foto %>
<%# Mostramos las fotos de la propiedad %>
<% @property.photos.each do |photo| %>
  <%# <%= image_tag photo %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<div>
  <%= link_to "Editar Propiedad", edit_property_path(@property) %> |
  <%= link_to "Volver a Mis Propiedades", properties_path %>

  <%= link_to "Eliminar esta propiedad", property_path(@property),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
