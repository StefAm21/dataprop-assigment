<div class="container-h1 mt-3">
  <h1>Detalles de la propiedad</h1>
</div>
<hr>

<div class="container d-flex justify-content-center">
  <div class="container card-comment">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2><%= @property.title %></h2>
        <p><%= @property.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <% @property.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12 text-center">
        <p><strong>Tipo de propiedad: </strong><%= @property.property_type %></p>
        <p><strong>Precio $: </strong><%= @property.price %></p>
        <p><strong>Comuna: </strong><%= @property.comuna %></p>
        <p><strong>Área m2: </strong><%= @property.area %></p>
        <p><strong>Habitaciones: </strong><%= @property.rooms %></p>
        <p><strong>Baños: </strong><%= @property.bathrooms %></p>
      </div>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center my-3">
  <%= button_to "Editar Propiedad", edit_property_path(@property), method: :get, class: "btn btn-warning mx-2" %>

  <%= button_to "Volver a Mis Propiedades", properties_path, class: "btn btn-primary mx-2" %>

  <%= button_to "Eliminar esta propiedad", property_path(@property),
  method: :delete, data: { confirm: "Are you sure?" },
  class: "btn btn-danger mx-2" %>
</div>
